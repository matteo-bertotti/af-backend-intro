# Dockerfile.dev
FROM node:18

WORKDIR /server

# Copy package files and install all dependencies
COPY package*.json ./
RUN npm install

# (Optional) Install nodemon globally if you plan to use it
RUN npm install -g ts-node

# Note: We do NOT copy your source code here â€“ it will be mounted during container start

EXPOSE 3000

# Start in development mode with nodemon (adjust command as needed)
CMD ["ts-node", "server/index.ts"]
#CMD ["sh"]